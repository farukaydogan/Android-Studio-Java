<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#BB3F3F"
        android:text="="
        app:layout_constraintStart_toEndOf="@+id/btnDot"
        app:layout_constraintTop_toBottomOf="@+id/btn3"
        app:cornerRadius="45dp"/>

    <Button
        android:id="@+id/btnSum"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#BB3F3F"
        android:text="+"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn3"
        app:layout_constraintTop_toBottomOf="@+id/btnMultiplact"
        app:cornerRadius="45dp"/>

    <Button
        android:id="@+id/btnSubtract"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#BB3F3F"
        android:text="-"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btnEqual"
        app:layout_constraintTop_toBottomOf="@+id/btnSum"
        app:cornerRadius="45dp"/>

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="136dp"
        android:backgroundTint="#BB3F3F"
        android:text="/"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintTop_toBottomOf="@+id/input"
        app:cornerRadius="45dp"/>

    <Button
        android:id="@+id/btnAllClear"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#BB3F3F"
        android:text="AC"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input"
        app:cornerRadius="45dp"/>

    <Button
        android:id="@+id/btnClear"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#BB3F3F"
        android:text="C"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btnAllClear"
        app:layout_constraintTop_toBottomOf="@+id/input"
        app:cornerRadius="45dp"/>

    <Button
        android:id="@+id/btn6"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#9DBCD4"
        android:text="6"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/btn9"
        app:cornerRadius="45dp"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#9DBCD4"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/btn5"
        app:cornerRadius="45dp"/>

    <Button
        android:id="@+id/btn5"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#9DBCD4"
        android:text="5"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btn8"
        app:cornerRadius="45dp"/>

    <Button
        android:id="@+id/btnDot"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#9DBCD4"
        android:text="."
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn0"
        app:layout_constraintTop_toBottomOf="@+id/btn2"
        app:cornerRadius="45dp"/>

    <Button
        android:id="@+id/btn7"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="144dp"
        android:backgroundTint="#9DBCD4"
        android:text="7"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:cornerRadius="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#9DBCD4"
        android:text="4"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn7"
        app:cornerRadius="45dp"/>

    <Button
        android:id="@+id/btn3"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#9DBCD4"
        android:text="3"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintTop_toBottomOf="@+id/btn6"
        app:cornerRadius="45dp"/>

    <Button
        android:id="@+id/btn9"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="136dp"
        android:backgroundTint="#9DBCD4"
        android:text="9"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn8"
        app:layout_constraintTop_toBottomOf="@+id/input"
        app:cornerRadius="45dp"/>

    <Button
        android:id="@+id/btn8"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="136dp"
        android:backgroundTint="#9DBCD4"
        android:text="8"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn7"
        app:layout_constraintTop_toBottomOf="@+id/input"
        app:cornerRadius="45dp"/>

    <Button
        android:id="@+id/btn0"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#9DBCD4"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn1"
        app:cornerRadius="45dp"/>

    <Button
        android:id="@+id/btnMultiplact"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#BB3F3F"
        android:text="*"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn6"
        app:layout_constraintTop_toBottomOf="@+id/btnDivide"
        app:cornerRadius="45dp"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="75dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#9DBCD4"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn4"
        app:cornerRadius="45dp"/>

    <TextView
        android:id="@+id/memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="228dp"
        android:layout_marginTop="56dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/white"/>

    <EditText
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="116dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/input"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>